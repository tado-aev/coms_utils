<?xml version="1.0"?>
<launch>
  <arg name="autonomous" value="$(optenv COMS_AUTONOMOUS_ENABLED true)" />.

  <!-- /dev/ttyUSB0 IMU -->
  <node pkg="xbow440" type="xbow440_node" name="vg440" >
    <param name="port" value="/dev/ttyUSB0" />
    <param name="baudrate" value="38400" />
  </node>

  <!-- /dev/ttyUSB1 JAVAD -->
  <node pkg="nmea_navsat_driver" type="nmea_serial_driver" name="javad" ns="javad" >
    <param name="port" value="/dev/ttyUSB1" />
    <param name="baud" value="115200" />
  </node>

  <!-- /dev/ttyUSB2 CNT723 -->
  <include file="$(find cnt723)/launch/cnt723_node.launch" />

  <!-- /dev/ttyUSB4 ssv102 -->
  <include file="$(find ssv102)/launch/ssv102_node.launch" ns="ssv102" />

  <!-- /dev/ttyACM0 URG -->
  <node pkg="hokuyo_node" type="hokuyo_node" name="urg" >
    <param name="port" value="/dev/ttyACM0" />
    <remap from="scan" to="urg_scan" />
  </node>

  <!-- Ethernet port Velodyne -->
  <include file="$(find velodyne_pointcloud)/launch/32e_points.launch" />
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_velodyne" args="0 0 0 -1.57079632675 0 0 base_link velodyne 10" />

  <group if="$(arg autonomous)">
    <!-- /dev/ttyUSB3 Steering actuator -->
    <include file="$(find coms_steering)/launch/coms_steering_node.launch" />

    <!-- /dev/ttyACM1 mbed -->
    <include file="$(find gear_a_b_mbed)/launch/coms.launch" />

    <include file="$(find coms_commander)/launch/coms_commander_node.launch" />
  </group>

  <!-- Odometry -->
  <group>
    <remap from="/imu" to="/vg440/imu/data" />
    <remap from="/encoder" to="/cnt723/count" />
    <include file="$(find coms_odom)/launch/coms_odom_node.launch" />
  </group>
</launch>
